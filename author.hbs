{{!-- Inherits the default.hbs template --}}
{{!< default}}

{{!-- Only if used in author context --}}
{{#is "author"}}

{{#author}}
<div class="row no-gutters">
    <div class="col-md-6 offset-md-3">
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{profile_image}}" class="card-img p-5" style="border-radius: 50%;" alt="{{name}}">
                </div>
                <div class="col-md-8">
                    <div class="card-body mt-5">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{bio}}</p>
                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        <div class="d-flex">
                            <a href=""><span class="fa fa-facebook text-dark m-3"></span></a>
                            <a href=""><span class="fa fa-twitter text-dark m-3"></span></a>
                            <a href=""><span class="fa fa-globe text-dark m-3"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/author}}
{{/is}}